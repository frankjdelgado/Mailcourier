<div class="container">
	<div class="row">
		<div class="col-xs-12 col-md-4 col-md-offset-4">	

		<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: "form-mail" }) do |f| %>
			
			<% devise_flash %>
			<%= f.hidden_field :reset_password_token %>
			
			<h2>Change your password</h2>

			<div class="form-group">
				<%= f.label :password, "New password", html:{ class: "text-uppercase" } %>
			    <%= f.password_field :password, autofocus: true, autocomplete: "off", class: "form-control input-lg" %>
			</div>

			<div class="form-group">
				<%= f.label :password_confirmation, "Confirm new password", html:{ class: "text-uppercase" } %>
				<%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control input-lg" %>
			</div>

			<div class="form-group">
				<%= f.submit "Change my password", class: "no-radius btn btn-green btn-block btn-lg text-uppercase" %>
			</div>
		<% end %>

		</div>
	</div>
</div>
