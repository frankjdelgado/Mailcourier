<div class="container">
	<div class="row">
		<div class="col-xs-12 col-md-4 col-md-offset-4">

		<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "form-mail" }) do |f| %>
			<% devise_flash %>

			<h1>Forgot your password?</h1>
			<br>
			<div class="form-group">
				<%= f.label :email, html:{ class: "text-uppercase" } %>
				<%= f.email_field :email, autofocus: true, class: "form-control input-lg" %>
			</div>

			<div class="form-group">
				<%= f.submit "Send me reset password instructions" , class: "no-radius btn btn-green btn-block btn-lg text-uppercase"%>
			</div>
		<% end %>

		</div>
	</div>
</div>

