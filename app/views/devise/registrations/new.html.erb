<div class="container">
	<div class="row">
		<div class="col-xs-12 col-md-6 col-md-offset-3">	
			<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "form-mail"}) do |f| %>
			  <% devise_flash %>

				<h1><%= t("sign_up") %></h1>
				<div class="form-group">
					<label for="email" class="text-uppercase"><%= t('email') %></label>
					<%= f.email_field :email, autofocus: true, required: true, class: "form-control input-lg", placeholder: t("enter")+" "+t("email") %>
				</div>

				<div class="form-group">
					<label for="username" class="text-uppercase"><%= t("username") %></label>

					<input type="text" class="form-control input-lg" id="user_username" name="user[username]" placeholder= <%= t("enter_username") %>) >
				</div>

				<div class="form-group">
					<label for="location" class="text-uppercase"><%= t("reception_center") %> <span title="prefered package reception center" class="glyphicon glyphicon-info-sign"></span></label>
					<%= f.collection_select(:agency_id, Agency.all, :id, :location, {include_blank: 'Select a location'},{class: "form-control input-lg", required: true}) %>
				</div>
				<div class="form-group">
			 		<%= f.label :password, class: "text-uppercase" %> <% if @validatable %><i>(<%= @minimum_password_length %> <%= t("characters")+" "+t("minimum") %>)</i><% end %><br />
			    	<%= f.password_field :password, autocomplete: "off", class: "form-control input-lg", required: true %>
				</div>

			  	<div class="form-group">
			  		<%= f.label :password_confirmation , class: "text-uppercase"%><br />
			    	<%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control input-lg", required: true %>
				</div>

			  	<div class="form-group">
			  		<%= f.submit t("sign_up"), class: "no-radius btn btn-green btn-block btn-lg text-uppercase"%>
			  	</div>
			<% end %>
		</div>
	</div>
</div>
