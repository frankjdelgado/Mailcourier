<div class="container">
	<div class="row">
		<div class="col-xs-12 col-md-6 col-md-offset-3">	
			<%= form_for(@user, url: users_admin_index_path(@user), html: {class: "form-mail"}) do |f| %>
			  <% devise_flash %>

				<h1>Add new operator</h1>
				<div class="form-group">
					<label for="email" class="text-uppercase">Email</label>
					<%= f.email_field :email, autofocus: true, class: "form-control input-lg", placeholder: "Enter email", required: true %>
				</div>

				<div class="form-group">
					<label for="username" class="text-uppercase">Username</label>
					<%= f.text_field :username, required:true, class: "form-control input-lg", placeholder: t("enter_username")%>
				</div>

				<div class="form-group">
					<label for="location" class="text-uppercase">reception center <span title="designated agency for operator" class="glyphicon glyphicon-info-sign"></span></label>
					<%= f.collection_select(:agency_id, Agency.all, :id, :location, {include_blank: 'Select a location'},{class: "form-control input-lg", required: true}) %>
				</div>
				<div class="form-group">
			 		<%= f.label :password, class: "text-uppercase" %> <% if @validatable %><i>(<%= @minimum_password_length %> characters minimum)</i><% end %><br />
			    	<%= f.password_field :password, autocomplete: "off", class: "form-control input-lg", required: true %>
				</div>

			  	<div class="form-group">
			  		<%= f.label :password_confirmation , class: "text-uppercase"%><br />
			    	<%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control input-lg", required: true  %>
				</div>

			  	<div class="form-group">
			  		<%= f.submit "Add operator", class: "no-radius btn btn-green btn-block btn-lg text-uppercase"%>
			  	</div>
			<% end %>
		</div>
	</div>
</div>
