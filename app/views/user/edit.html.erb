<div class="container">
	<div class="row">
		<div class="col-xs-12 col-md-6 col-md-offset-3">  

		<%= form_for(@user, url: users_admin_path(@user), html: { method: :put }, html: {class: "form-mail"}) do |f| %>
		  <% devise_flash %>

			<h1>Edit Operator</h1>

			<div class="form-group">
				<%= f.label :username, class: "text-uppercase" %>
				<%= f.text_field :username, autofocus: true, class: "form-control input-lg" %>
			</div>

			<div class="form-group">
				<%= f.label :email, class: "text-uppercase" %>
				<%= f.email_field :email, autofocus: true, class: "form-control input-lg" %>
			</div>

			<div class="form-group">
				<label for="location" class="text-uppercase">reception center <span title="designated agency for operator" class="glyphicon glyphicon-info-sign"></span></label>
				<%= f.collection_select(:agency_id, Agency.all, :id, :location, {include_blank: 'Select a location'},{class: "form-control input-lg"}) %>

			</div>

			<div class="form-group">
				<%= f.submit "Update", class: "no-radius btn btn-green btn-block btn-lg text-uppercase" %>
			</div>
		<% end %>
		
		<%= form_for(@user, url: users_admin_path(@user), html: { method: :put }, html: {class: "form-mail"}) do |f| %>
			<hr>
			<div class="form-group">
				<%= f.label :password, class: "text-uppercase" %> <i>(leave blank if you don't want to change it)</i>
				<%= f.password_field :password, autocomplete: "off", class: "form-control input-lg"%>
			</div>
			<div class="form-group">
				<%= f.submit "Change", class: "no-radius btn btn-green btn-block btn-lg text-uppercase" %>
			</div>
		<% end %>
		</div>
	</div>
</div>