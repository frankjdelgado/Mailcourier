<!-- Modal Login -->
<div class="modal fade" id="login" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h1 class="modal-title ">Login</h1>
      </div>
	    <form action="" role="form">
	      <div class="modal-body">
			<div class="form-group">
				<label for="email" class="text-uppercase">Email</label>
				<input type="email" class="form-control input-lg" name="email" placeholder="Enter email">
			</div>
			<div class="form-group">
				<label for="password" class="text-uppercase">Password</label>
				<input type="password" class="form-control input-lg" name="password" placeholder="Password">
			</div>
	      </div>
	      <div class="modal-footer">
	        <button type="submit" class="no-radius btn btn-green btn-block btn-lg text-uppercase">login</button>
	      </div>
	    </form>
    </div>
  </div>
</div>

<!-- Modal Signup -->
<div class="modal fade" id="signup" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h1 class="modal-title ">Sign up</h1>
      </div>
	    <form action="" role="form">
	      <div class="modal-body">
			<div class="form-group">
				<label for="email" class="text-uppercase">Email</label>
				<input type="email" class="form-control input-lg" name="email" placeholder="Enter email">
			</div>
			<div class="form-group">
				<label for="username" class="text-uppercase">Username</label>
				<input type="text" class="form-control input-lg" name="username" placeholder="Enter Username">
			</div>
			<div class="form-group">
				<label for="location" class="text-uppercase">reception center <span title="prefered package reception center" class="glyphicon glyphicon-info-sign"></span></label>
				<select  class="form-control input-lg" name="location">
					<option selected disabled value="">Select a Location</option>
					<option value="">Location 1</option>
					<option value="">Location 2</option>
					<option value="">Location 3</option>
				</select>
			</div>
			<div class="form-group">
				<label for="password" class="text-uppercase">Password</label>
				<input type="password" class="form-control input-lg" name="password" placeholder="Password">
			</div>
			<div class="form-group">
				<label for="password_confirmation" class="text-uppercase">Password confirmation</label>
				<input type="password" class="form-control input-lg" name="password_confirmation" placeholder="Password Confirmation">
			</div>
	      </div>
	      <div class="modal-footer">
	        <button type="submit" class="no-radius btn btn-green btn-block btn-lg text-uppercase">Sign up</button>
	      </div>
	    </form>
    </div>
  </div>
</div>

