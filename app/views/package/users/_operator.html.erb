<div class="container">
	<div class="row">
		<div class="col-xs-12">
			<ul class="list-unstyled list-inline title-separator">
				<li class="align-middle"><%= image_tag "open-box.png" , class: "img-responsive img-sm", title: 'Ballicons (free) by Nick Frost is licensed under CC BY 3.0'%></li>
				<li class="align-middle"><h3 class="no-margin">Packages</h3></li>
			</ul>
		</div>
		<div class="col-xs-12 col-md-8">
			<div class="table-responsive">
				<table class="table table-hover" id="table-package">
					<thead>
						<tr>
							<th>#</th>
							<th>Description</th>
							<th>Status</th>
							<th>To</th>
							<th>From</th>
							<th>Mask As</th>
						</tr>
					</thead>
					<tbody>
						<% @packages.each_with_index do |package,i| %>
						<tr>
							<td><%= i+1 %></td>
							<td><%= package.description %></td>
							<td class="text-capitalize"><%= package.status_human %></td>
							<td><%= package.receiver.username %></td>
							<td><%= package.sender.username %></td>
							<td>
								<% if package.is_pending?%>
								<button class="btn btn-xs btn-black">Arrived</button>
								<%elsif package.is_arrived?%>
								<button class="btn btn-xs btn-green">Delivered</button>
								<%end%>
							</td>
						</tr>
						<% end %>
					</tbody>
				</table>
			</div>
			<div class="text-right">
				<%= paginate @packages %>	
			</div>
		</div>
		<div class="col-md-offset-1 col-md-3 col-xs-12">
			<form action="" role="form" method="post">
				<div class="input-group form-group">
			        <input type="text" class="form-control" placeholder="Search Package" name="search-term" id="search-term">
			        <div class="input-group-btn">
			            <button class="btn btn-green" type="submit"><i class="glyphicon glyphicon-search"></i></button>
			        </div>
			    </div>
			    <span class="text-grey">Search by...</span>
				<div class="radio">
					<label class="radio-inline">
						<input checked type="radio" name="search-by" id="search-by1" value="user"> User
					</label>
					<label class="radio-inline">
						<input type="radio" name="search-by" id="search-by2" value="package"> Package
					</label>
				</div>
			</form>
	    	<p class="text-danger text-center">0 Packages found</p>
		</div>
		<p><%= %></p>
	</div>
</div>