<div class="container">
	<div class="row">
		<div class="col-xs-12">
			<ul class="list-unstyled list-inline title-separator">
				<li class="align-middle"><%= image_tag "open-box.png" , class: "img-responsive img-sm", title: 'Ballicons (free) by Nick Frost is licensed under CC BY 3.0'%></li>
				<li class="align-middle"><h3 class="no-margin">Packages</h3></li>
			</ul>
		</div>
		<div class="col-xs-12 col-md-8">
			<div class="table-responsive">
				<table class="table table-hover" id="table-package">
					<thead>
						<tr>
							<th class="text-capitalize">Reference number</th>
							<th class="text-capitalize">Description</th>
							<th class="text-capitalize">Status</th>
							<th class="text-capitalize">To</th>
							<th class="text-capitalize">From</th>
							<th class="text-capitalize">Mask As</th>
							<th class="text-capitalize">Details</th>
						</tr>
					</thead>
					<tbody>
						<% @packages.each_with_index do |package,i| %>
						<tr>
							<td><%= package.ref_number %></td>
							<td><%= package.description %></td>
							<td class="text-capitalize"><%= package.status_human %></td>
							<td><%= package.receiver.username %></td>
							<td><%= package.sender.username %></td>
							<td>
								<% if package.is_pending?%>
								<%=link_to("Arrived", package_path(package, :status => 1), :method => :put, data: {confirm: "Are you sure you want to mark this package as Arrived?"}, class: 'btn btn-block btn-xs btn-black')%>
								<%elsif package.is_arrived?%>
								<%=link_to("Delivered", package_path(package, :status => 2), :method => :put, data: {confirm: "Are you sure you want to mark this package as Delivered?"}, class: 'btn btn-block btn-xs btn-green')%>
								<%end%>
							</td>
							<td><%=link_to("View Details", package_path(package))%></td>
						</tr>
						<% end %>
					</tbody>
				</table>
			</div>
			<div class="text-right">
				<%= paginate @packages %>	
			</div>
		</div>
		<div class="col-md-offset-1 col-md-3 col-xs-12">
			<%= form_tag(package_index_path, :method => "get", role: "form", id: "search-form") do %>
				<div class="input-group form-group">
			        <%= text_field_tag :search, params[:search], class: "form-control", placeholder: "Search Packages", id: "search-form" %>
			        <div class="input-group-btn">
			            <button class="btn btn-green" type="submit"><i class="glyphicon glyphicon-search"></i></button>
			        </div>
			    </div>
			    <span class="text-grey">Search by...</span>
				<div class="radio">
					<label class="radio-inline">
						<input checked type="radio" name="search_by" id="search-by1" value="user"> User
					</label>
					<label class="radio-inline">
						<input type="radio" name="search_by" id="search-by2" value="package"> Ref. Number
					</label>
				</div>
			<% end %>
	    	<%if !@count.blank?%>
	    		<%if @count == 0%>
	    			<p class="text-danger text-center"><%=@count%> Packages found</p>
	    		<%else%>
	    			<p class="text-success text-center"><%=@count%> Packages found</p>
	    		<%end%>
	    	<%end%>
		</div>
	</div>
</div>