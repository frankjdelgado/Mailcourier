<div class="container">
	<div class="row">
		<div class="col-xs-12">
			<ul class="list-unstyled list-inline title-separator">
				<li class="align-middle"><%= image_tag "open-box.png" , class: "img-responsive img-sm", title: 'Ballicons (free) by Nick Frost is licensed under CC BY 3.0'%></li>
				<li class="align-middle"><h3 class="no-margin">Packages</h3></li>
			</ul>
		</div>
		<div class="col-xs-12 col-md-8">
			<div class="table-responsive">
				<table class="table table-hover" id="table-package">
					<thead>
						<tr>
							<th>#</th>
							<th>Ref. Number</th>
							<th>Description</th>
							<th>Role</th>
							<th>Status</th>
							<th>Details</th>
						</tr>
					</thead>
					<tbody>
						<% @packages.each_with_index do |package,i| %>
						<tr>
							<td><%= i+1 %></td>
							<td><%= package.ref_number %></td>
							<td><%= package.description %></td>
							<td><%= current_user.package_role(package) %></td>
							<td class="text-capitalize"><%= package.status_human%></td>
							<td><%=link_to("View Details", package_path(package))%></td>
						</tr>
						<% end %>
					</tbody>
				</table>
			</div>
			<div class="text-right">
				<%= paginate @packages %>	
			</div>
		</div>
		<div class="col-md-offset-1 col-md-3 col-xs-12">
			<%= form_tag(package_index_path, :method => "get", role: "form", id: "search-form") do %>
				<div class="input-group form-group">
					<%= text_field_tag :search, params[:search], class: "form-control", placeholder: "Search Packages by Ref. number", id: "search-form" %>
			        <div class="input-group-btn">
			            <button class="btn btn-green" type="submit"><i class="glyphicon glyphicon-search"></i></button>
			        </div>
			    </div>
			<% end %>
	    	<%if !@count.blank?%>
	    		<%if @count == 0%>
	    			<p class="text-danger text-center"><%=@count%> Packages found</p>
	    		<%else%>
	    			<p class="text-success text-center"><%=@count%> Packages found</p>
	    		<%end%>
	    	<%end%>
		</div>
	</div>
</div>