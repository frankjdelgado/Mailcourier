<div class="container">
	<div class="row">
		<div class="col-xs-12">
			<ul class="list-unstyled list-inline title-separator">
				<li class="align-middle"><%= image_tag "money.png" , class: "img-responsive img-sm", title: 'Keynote and PowerPoint icons by Magnus Emil Liisberg Helding is licensed under Free for commercial use'%></li>
				<li class="align-middle"><h3 class="no-margin text-capitalize"><%=t('rates')%></h3></li>
			</ul>
		</div>
		<div class="col-xs-12 col-md-8">
			<div class="table-responsive">
				<table class="table table-hover" id="table-package">
					<thead>
						<tr>
							<th class="text-capitalize">#</th>
							<th class="text-capitalize"><%=t('package_rate')%></th>
							<th class="text-capitalize"><%=t('value_rate')%></th>
							<th class="text-capitalize"><%=t('created_at')%></th>
							<th class="text-capitalize"><%=t('updated_at')%></th>
							<th class="text-capitalize"><%=t('status')%></th>
							<th></th>
						</tr>
					</thead>
					<tbody>
						<% @rates.each_with_index do |rate,i| %>
						<tr>
							<td><%= i+1 %></td>
							<td><%= rate.package %></td>
							<td><%= rate.cost %></td>
							<td><%= rate.created_at %></td>
							<td><%= rate.updated_at %></td>
							<% if rate.is_active?%>
							<td class="text-center text-capitalize">
								<div class="btn btn-xs text-capitalize label-green btn-block"><%=t('active')%></div>
							</td>
							<td></td>
							<% else%>
							<td class="text-center text-capitalize">
								<%=link_to(t("activate"), rate_path(rate, :status => 1), :method => :put, data: {confirm: t("ask_activate_rate")}, class: 'btn btn-block btn-xs btn-black text-capitalize')%>
							</td>
							<td>
								<%= link_to t("delete"), rate_path(rate), method: :delete, data: {confirm: t("ask_sure")}, class: 'text-uppercase text-danger' %>
							</td>

							<%end%>
						</tr>
						<% end %>
					</tbody>
				</table>
			</div>
			<div class="text-right">
				<%= paginate @rates %>	
			</div>
		</div>
	</div>
</div>